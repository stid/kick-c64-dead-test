# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.asm]
indent_style = tab
indent_size = 8
tab_width = 8

[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[makefile]
indent_style = tab
indent_size = 8

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[CHANGELOG.md]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 4